<div style="background-color:lightgrey">
<p style="color: green"><%= notice %></p>

<h1 class="text-center mt-4">Listing All Articles</h1>
<h3>
<%= link_to "Create New Article ", new_article_path %>
</h3>
<div class="container">
<% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-body rounded">
    <div class="card-header fst-italic fw-bold">
     By Enrilo Ugalde
    </div>
  <div class="card-body">
  <h5 class="card-title"><%= link_to article.title, article, class: "text-success" %> </h5>
  <p class="card-text"><%= truncate(article.description, length: 100 )%></p>
  <%= link_to "View", article, class: "btn btn-outline-success" %>
  <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info"%>
  <%= link_to "Delete", article, method: :delete, class: "btn btn-outline-danger"%>
  </div>
  <div class="card-footer text-muted">
    <small> Created <%= time_ago_in_words(article.created_at) %> ago,
     Edited <%= time_ago_in_words(article.updated_at) %> ago </small>
  </div>
  </div>
  </div>
  </div>
  <% end %>
  </div>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
      <%= link_to "Show this article", article %> | 
      <%= link_to "Edit this article", edit_article_path(article) %> |
      <%= link_to "Delete this article", article_path(article), method: :delete, data: { "turbo-method": :delete , "turbo-confirm": "VocÃª tem certeza?"} %>
  <% end %>
</div>
<h1> This is showing the articles within a Table </h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan=3>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
    <td><%= article.title %> </td>
    <td><%= article.description%> </td>
    <td><%= link_to "Edit", edit_article_path(article)%> </td>
    <td><%= link_to "Show", article%> </td>
    <td><%= button_to "Delete", article, method: :delete, onclick: "return confirm('Are you sure?')" %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
